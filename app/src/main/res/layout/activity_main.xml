<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/content_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bar"
        app:menu="@menu/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottomNavBarMargin"
        android:layout_marginLeft="@dimen/bottomNavBarMargin"
        android:layout_marginEnd="@dimen/bottomNavBarMargin"
        android:layout_marginRight="@dimen/bottomNavBarMargin"
        android:layout_marginBottom="@dimen/bottomNavBarMargin"
        android:background="@drawable/rounded_rect_grey"
        app:itemIconTint="@color/selector_navbar"
        app:itemTextColor="@color/selector_navbar"
        app:itemBackground="@drawable/selector_radio"
        app:itemHorizontalTranslationEnabled="true"
        app:labelVisibilityMode="selected"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">



    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>