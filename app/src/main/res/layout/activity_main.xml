<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg">



    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/equal_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottomNavBarMargin"
        android:layout_marginLeft="@dimen/bottomNavBarMargin"
        android:layout_marginEnd="@dimen/bottomNavBarMargin"
        android:layout_marginRight="@dimen/bottomNavBarMargin"
        android:layout_marginBottom="@dimen/bottomNavBarMargin"
        android:background="@drawable/rounded_rect_white"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/m_item_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_colorActive="@color/white"
            app:bt_colorInactive="@color/default_inactive"
            app:bt_icon="@drawable/baseline_book_black_24dp"
            app:bt_shape="@drawable/assignments_background_stroke"
            app:bt_title="Assignments" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/m_item_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:bt_colorActive="@color/white"
            app:bt_colorInactive="@color/default_inactive"
            app:bt_icon="@drawable/baseline_home_black_24dp"
            app:bt_shape="@drawable/home_background_stroke"
            app:bt_title="Home" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/m_item_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_colorActive="@color/white"
            app:bt_colorInactive="@color/default_inactive"
            app:bt_icon="@drawable/baseline_calendar_view_week_black_24dp"
            app:bt_shape="@drawable/timetable_background_stroke"
            app:bt_title="Timetable" />

    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>


</androidx.constraintlayout.widget.ConstraintLayout>