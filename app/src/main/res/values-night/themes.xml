<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HCIProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="dialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
<!--        If changing anything here make sure to change it in the night file for v28 too-->
        <item name="android:background">#151515</item>
        <item name="android:shape">rectangle</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/negButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/posButtonStyle</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:backgroundDimAmount">0.83</item>
    </style>
    <style name="cancelDialogTheme" parent="dialogTheme">
        <item name="buttonBarNegativeButtonStyle">@style/deleteButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="negButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="posButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green_active</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="deleteButton" parent="posButtonStyle">
        <item name="backgroundTint">@color/red_active</item>
    </style>
</resources>